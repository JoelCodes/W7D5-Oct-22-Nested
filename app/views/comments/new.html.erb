<h1>New Comment</h1>

<%= form_for([@article, @comment]) do |f|%>
  <p>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create New Comment"%>
  </p>
<% end %>
<%= link_to 'Back', article_comments_path(@article) %>
